generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  MANAGER
  ADMIN
}

enum Discipline {
  DOTA2
  CS2
  VALORANT
  LEAGUE_OF_LEGENDS
  FORTNITE
  CALL_OF_DUTY_WARZONE
  WORLD_OF_TANKS
  PUBG
  APEX_LEGENDS
  WARFACE
  FIFA
  OVERWATCH2
  CLASH_ROYALE
  BRAWL_STARS
  STARCRAFT2
  MORTAL_KOMBAT
  TETRIS
}

enum TournamentStatus {
  ANNOUNCED
  REGISTRATION_OPEN
  REGISTRATION_CLOSED
  LIVE
  FINISHED
  CANCELLED
}

enum BracketType {
  SINGLE_ELIMINATION
  DOUBLE_ELIMINATION
  ROUND_ROBIN
  SWISS
}

enum TeamMode {
  SOLO_1V1
  DUO_2V2
  TEAM_5V5
  SQUAD
}

enum EntryStatus {
  PENDING
  APPROVED
  REJECTED
}

enum JoinRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum TypeNotification {
  INVITE
  MATCH
  SYSTEM
}

enum BanType {
  PERMANENT
  TEMPORARY
}

model User {
  id                 String            @id @default(uuid())
  nickname           String            @unique
  email              String            @unique
  passwordHash       String
  role               UserRole          @default(USER)
  avatarUrl          String?
  bio                String?
  hashedRt           String?
  entries            TournamentEntry[]
  createdTournaments Tournament[]
  createdAt          DateTime          @default(now())
  teamsOwned         Team[]            @relation("TeamOwner")
  teamMember         TeamMember[]
  joinRequests       JoinRequest[]
  fcmToken           String?
  notifications      Notification[]
  isBanned           Boolean           @default(false)
  banReason          String?
  banExpires         DateTime?
  banHistories       BanHistory[]
  wonTournaments     Tournament[]      @relation("TournamentWinnerUser")
}

model Tournament {
  id              String            @id @default(uuid())
  title           String
  description     String
  rules           String
  imageUrl        String
  discipline      Discipline        @default(DOTA2)
  bracketType     BracketType       @default(SINGLE_ELIMINATION) @map("bracket_type")
  teamMode        TeamMode          @default(TEAM_5V5) @map("team_mode")
  status          TournamentStatus  @default(ANNOUNCED)
  startDate       DateTime
  maxParticipants Int
  prizePoolString String?
  prizesJson      Json?
  address         String?
  isOnline        Boolean           @default(true)
  creatorId       String?
  creator         User?             @relation(fields: [creatorId], references: [id])
  entries         TournamentEntry[]
  createdAt       DateTime          @default(now())
  matches         Match[]
  winnerUserId    String?
  winnerUser      User?             @relation("TournamentWinnerUser", fields: [winnerUserId], references: [id])
  winnerTeamId    String?
  winnerTeam      Team?             @relation("TournamentWinnerTeam", fields: [winnerTeamId], references: [id])
}

model TournamentEntry {
  id           String      @id @default(uuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  tournamentId String
  tournament   Tournament  @relation(fields: [tournamentId], references: [id])
  teamId       String?
  team         Team?       @relation(fields: [teamId], references: [id])
  status       EntryStatus @default(PENDING)
  registeredAt DateTime    @default(now())
  rosterJson   Json?

  @@unique([userId, tournamentId, teamId])
}

model Team {
  id             String            @id @default(uuid())
  name           String            @unique
  tag            String            @unique
  avatarUrl      String?
  description    String?
  socialMedia    String?
  gamesList      String[]
  ownerId        String
  owner          User              @relation("TeamOwner", fields: [ownerId], references: [id])
  members        TeamMember[]
  entries        TournamentEntry[]
  createdAt      DateTime          @default(now())
  joinRequests   JoinRequest[]
  isBanned       Boolean           @default(false)
  banReason      String?
  banExpires     DateTime?
  banHistories   BanHistory[]
  wonTournaments Tournament[]      @relation("TournamentWinnerTeam")
}

model TeamMember {
  id       String   @id @default(uuid())
  teamId   String
  team     Team     @relation(fields: [teamId], references: [id])
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  joinedAt DateTime @default(now())

  @@unique([teamId, userId])
}

model JoinRequest {
  id       String            @id @default(uuid())
  userId   String
  user     User              @relation(fields: [userId], references: [id])
  teamId   String
  team     Team              @relation(fields: [teamId], references: [id])
  status   JoinRequestStatus @default(PENDING)
  createAt DateTime          @default(now())

  @@unique([userId, teamId])
}

model Match {
  id           String     @id @default(uuid())
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  round        Int
  position     Int
  participant1 String?
  participant2 String?
  score1       Int        @default(0)
  score2       Int        @default(0)
  winnerId     String?
  nextMatchId  String?
  nextMatch    Match?     @relation("NextMatch", fields: [nextMatchId], references: [id])
  prevMatches  Match[]    @relation("NextMatch")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  title     String
  body      String
  type      TypeNotification @default(SYSTEM)
  data      Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
}

model BanHistory {
  id        String    @id @default(uuid())
  userId    String?
  user      User?     @relation(fields: [userId], references: [id])
  teamId    String?
  team      Team?     @relation(fields: [teamId], references: [id])
  issureId  String
  reason    String
  type      BanType
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  isActive  Boolean   @default(true)
}
